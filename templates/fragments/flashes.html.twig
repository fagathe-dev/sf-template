{% for type, message in app.flashes %}
  <div class="container">
    <div class="alert border-0 alert-{{ type }} alert-dismissible fade show mt-3" role="alert">
      {{ message[0]|raw }}
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  </div>
{% endfor %}
